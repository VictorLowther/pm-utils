check_suspend()
{
	grep -q mem /sys/power/state
}

do_suspend()
{
        pm-pmu --suspend || echo -n "mem" > /sys/power/state
}

check_hibernate()
{
	[ -f /sys/power/disk ] && grep -q disk /sys/power/state
}

do_hibernate()
{
        echo -n "${HIBERNATE_MODE}" > /sys/power/disk
        echo -n "disk" > /sys/power/state
}

check_suspend_hybrid()
{
	return 1
}

do_suspend_hybrid()
{
        return 1
}
