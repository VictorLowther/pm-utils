# The rule here? Simplicity.

export PM_FUNCTIONS="@PM-UTILS-LIBDIR@/functions"
. "${PM_FUNCTIONS}"

# save the command line parameters for the hooks.
export PM_CMDLINE="$*"
help()
{
	echo "${0##*/} [options]"
	echo
	echo "Options can change how the supend or hibernate is done."
	echo "pm-utils by itself does not handle any options except --help."
	echo
	echo "Instead, any options you supply are passed on to the helper"
	echo "progams that handle the details of power management."
	echo
	echo "Those options are:"
	run_hooks sleep help
	exit 0
}

if [ -n "$EUID" -a "$EUID" != "0" ]; then
	echo This utility may only be run by the root user. 1>&2
	exit 1
fi

# Save the command line options for the hooks
while [ $# -gt 0 ]
do
	[ "$1" = "--help" ] && help
	shift
done

ACTION="$(echo ${0##*pm-} |tr - _)"

case "$ACTION" in
	suspend) 	REVERSE=resume ;;
	hibernate) 	REVERSE=thaw ;;
	suspend_hybrid) REVERSE=resume ;;
	*)		echo "Don't know how to ${ACTION}."
			exit 1 ;;
esac

pm_main "${ACTION}" "${REVERSE}"
